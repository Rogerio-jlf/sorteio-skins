generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // <- necessário só por causa do Studio
}

model User {
  id            String        @id
  name          String
  email         String        @unique
  emailVerified Boolean
  image         String?
  createdAt     DateTime
  updatedAt     DateTime
  role          UserRole      @default(USER)
  accounts      Account[]
  deposits      Deposit[]
  wonRaffles    Raffle[]
  entries       RaffleEntry[]
  sessions      Session[]

  @@map("user")
}

model Session {
  id        String   @id
  expiresAt DateTime
  token     String   @unique
  createdAt DateTime
  updatedAt DateTime
  ipAddress String?
  userAgent String?
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime
  updatedAt             DateTime
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime
  updatedAt  DateTime

  @@map("verification")
}

model Sponsor {
  id         String    @id @default(cuid())
  name       String    @unique
  slug       String    @unique
  couponCode String    @unique
  logoUrl    String?
  isActive   Boolean   @default(true)
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
  deposits   Deposit[]
  raffles    Raffle[]

  @@map("sponsor")
}

model Raffle {
  id           String        @id @default(cuid())
  sponsorId    String
  title        String
  description  String?
  skinName     String
  skinImage    String?
  skinValue    Float
  startDate    DateTime
  endDate      DateTime
  drawDate     DateTime?
  status       RaffleStatus  @default(ACTIVE)
  winnerId     String?
  winnerNumber Int?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  deposits     Deposit[]
  sponsor      Sponsor       @relation(fields: [sponsorId], references: [id])
  winner       User?         @relation(fields: [winnerId], references: [id])
  entries      RaffleEntry[]

  @@index([sponsorId])
  @@index([status])
  @@index([winnerId])
  @@map("raffle")
}

model Deposit {
  id         String        @id @default(cuid())
  userId     String
  sponsorId  String
  raffleId   String
  amount     Float
  quotas     Int
  proofImage String
  status     DepositStatus @default(PENDING)
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt
  raffle     Raffle        @relation(fields: [raffleId], references: [id])
  sponsor    Sponsor       @relation(fields: [sponsorId], references: [id])
  user       User          @relation(fields: [userId], references: [id])
  entries    RaffleEntry[]

  @@index([userId])
  @@index([sponsorId])
  @@index([raffleId])
  @@index([status])
  @@map("deposit")
}

model RaffleEntry {
  id           String   @id @default(cuid())
  userId       String
  raffleId     String
  depositId    String
  ticketNumber Int
  createdAt    DateTime @default(now())
  deposit      Deposit  @relation(fields: [depositId], references: [id])
  raffle       Raffle   @relation(fields: [raffleId], references: [id])
  user         User     @relation(fields: [userId], references: [id])

  @@unique([raffleId, ticketNumber])
  @@index([userId])
  @@index([raffleId])
  @@index([depositId])
  @@map("raffle_entry")
}

enum UserRole {
  USER
  ADMIN
}

enum RaffleStatus {
  ACTIVE
  DRAWING
  COMPLETED
  CANCELLED
}

enum DepositStatus {
  PENDING
  APPROVED
  REJECTED
}
